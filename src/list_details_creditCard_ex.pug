extends _layout.pug

//- 可覆寫 _layout.png 變數，或新增單頁所需變數
append vars
  - var data_header = {hasArrow: true, hasArrowHeader: false, hasClose: false}

//- 單頁樣式，或若有第三方樣式從這增加
append style    
  link(rel="stylesheet" href="./css/master.css")

//- main 區塊
append main 
  .list-detail.container-fluid.maxWidth-768
    .wrapper.expense
      .main__list--detail 
    .canvas.expense
      .list-detail__container.flex-box.border-bottom--ex
        .list-detail__container-left
          .icon-listDetails.icon-listDetails__shopping
        .list-detail__container-right
          .flex-top.flex-between
            .flex-left
              .list-detail__title.bold 購物
              .edit-img
                a(href="edit_categories_ex.html")
                  img(src="./images/global/icon_edit_gray.svg" alt="")
            .flex-right      
              .close-img
                a(href="category_details_ex.html")
                  img(src="./images/global/icon_close_x.svg" alt="")
          .flex-bottom
            .list-detail__amount--ex.bold - 32,423
      //- list-detail 下方內容
      .list-detail__container
        .list-detail__list
          .flex-box.flex-between
            span 交易說明
            .edit-description-img
              a(href="#myModal").popup_toggle
                img(src="./images/global/icon_edit_gray.svg" alt="")
          .bold.wrap__break 淘寶網購物淘寶網購物淘寶網購物淘寶網購物淘寶網購物淘寶網購物淘寶網購物
        .list-detail__list
          span 原始消費金額
          .bold.wrap__break - RMB 5,860
        .list-detail__list
          span 交易日
          .bold.wrap__break 2022/03/20      
        .list-detail__list
          span 入帳日
          .bold.wrap__break 2022/03/24 (未結帳)
        .list-detail__list
          span 帳務資訊
          .bold.wrap__break DAWHO現金回饋信用卡(9308)
        .list-detail__list
          span 店家
          .bold.wrap__break 淘寶網
        .list-detail__list
          .flex-between
            .bold 這筆不算 
            label.switch
              input(type="checkbox" checked)
              span.slider.round
        .buttonSet__red
          a(href="category_details_ex.html")  取消
          //-a(href="category_details.html").primary 套用
          a(href="category_details_ex.html").invisible 套用          
    .popup2#myModal  
      .content
        form(action="post")
          .edit-popup__title.flex-between
            .bold.text 交易說明
            .flex-box
              .reset-btn-img
                img(src="./images/global/restore_description.svg" alt="") 
              button.rest(type='reset') 回復預設說明
          input(type="text" placeholder="" value="淘寶網購物").input__description 
          .buttonSet__red
            a(href="") 取消
            a(href="").primary 儲存

//- 單頁 Javascript
append script  
  script. 







