extends _layout.pug

//- 可覆寫 _layout.png 變數，或新增單頁所需變數
append vars
  - var data_header = {hasArrow: true, hasArrowHeader: false, hasClose: false}

//- 單頁樣式，或若有第三方樣式從這增加
append style  
  link(rel="stylesheet" href="./css/master.css")

//- main 區塊
append main 
  .container-fluid.maxWidth-768.min-height__100--in
    .wrapper.income
      .main.main__pd-sm
        .category__wrap
          .category__title 編輯分類
          .category__inner       
            .category__row
              a(href="").category__col
                .icon-editCat.icon-editCat__salary
                .category__txt 薪資
              a(href="").category__col
                .icon-editCat.icon-editCat__transfer
                .category__txt 帳號互轉
              //- a(href="").category__col
              //-   .icon-editCat.icon-editCat__mobilePay
              //-   .category__txt 電子支付     
              a(href="").category__col
                .icon-editCat.icon-editCat__interest
                .category__txt 利息
              a(href="").category__col
                .icon-editCat.icon-editCat__bonus
                .category__txt 獎金  
            .category__row
              a(href="").category__col
                .icon-editCat.icon-editCat__rent
                .category__txt 租金          
              a(href="").category__col
                .icon-editCat.icon-editCat__cashBack.active
                .category__txt 現金回饋
              a(href="").category__col
                .icon-editCat.icon-editCat__cashReturn
                .category__txt 退款
              a(href="").category__col
                .icon-editCat.icon-editCat__invest
                .category__txt 投資
            .category__row
              a(href="").category__col
                .icon-editCat.icon-editCat__fixDeposit
                .category__txt 定存
              a(href="").category__col
                .icon-editCat.icon-editCat__moneyExchange
                .category__txt 換匯
              a(href="").category__col
                .icon-editCat.icon-editCat__loanIncome
                .category__txt 貸款          
              a(href="").category__col
                .icon-editCat.icon-editCat__insurance
                .category__txt 保險
            .category__row
              a(href="").category__col
                .icon-editCat.icon-editCat__pension
                .category__txt 退休金
              a(href="").category__col
                .icon-editCat.icon-editCat__cash
                .category__txt 零用金
              a(href="").category__col
                .icon-editCat.icon-editCat__prepay
                .category__txt 代墊款
              a(href="").category__col
                .icon-editCat.icon-editCat__gift
                .category__txt 贈與
            .category__row.flex-start
              a(href="").category__col
                .icon-editCat.icon-editCat__allowance
                .category__txt 補助
              a(href="").category__col
                .icon-editCat.icon-editCat__others
                .category__txt 其他
          .category__more 
            p.show-more 查看更多
        .buttonSet
          a(href="list_details_in.html")  取消
          a(href="").primary 套用

//- 單頁 Javascript
append script
  script.
    $(document).ready(function () {
      $('.show-more').on('click' , function (e) {
          $('.category__inner').toggleClass('show');
          $('.show-more').hide();
      });
    });