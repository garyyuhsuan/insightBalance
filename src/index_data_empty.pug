extends _layout.pug

//- 可覆寫 _layout.png 變數，或新增單頁所需變數
append vars 
  - var data_header = {hasArrow: false, hasArrowHeader: true, hasClose: false}

//- 單頁樣式，或若有第三方樣式從這增加
append style  
  //- link(rel="stylesheet" href="./css/jqpreloader.css")
  link(rel="stylesheet" href="./css/master.css")

//- main 區塊
append main 
  .container-fluid.maxWidth-768
    .wrapper.expense 
      .main
        .searching-area
          .bold 收支手帳
          .flex-box   
            a(href="search.html").search-white-img
              img(src="./images/global/icon_search_white.svg" alt="") 
            a(href="filter_ex.html").filter-img
              img(src="./images/global/icon_filter.svg" alt="") 

        //- 時間區間篩選
        include component/_tabs-time.pug
        .balance-area
          .flex-box
            p 淨收支
            a#info.info
              img(src="./images/global/icon_info_white.svg" alt="")
            #info_msg.balance-area-msg(style="display:none") 外幣折算規則 : 若有交易匯率，以原始交易匯率折算，否則以交易日日終匯率折算。
          .bold 20,000

      .pills-area
        a(href="#").pill-income
          span 
          span 收入
          span 141,200

        a(href="#").pill-expenses.active
          span 
          span 支出
          span 41,200

      .round-shape 
        #myHeader.header 
          a#tab1.bold.color-ex 分類
          a#tab2.bold.color-ex.inactive 明細

      #content
        #categories
          .details__notice            
            .details__notice--text 包含「薪資」的搜尋結果如下
            a(href="") 清除搜尋  
              

          .filter__group
            a(href="").btn 金額自訂 
              img(src="./images/global/icon_close_white.svg")
            a(href="").btn 帳務類別(4)
              img(src="./images/global/icon_close_white.svg")

          .categories
            .empty__content  
              img(src="./images/global/icon_empty_editing.svg", alt="")
              h4 尚無相關內容 
              span 溫馨小提示：使用永豐帳戶及信用卡，<br>資料就會定期自動匯入唷 

            .gotop#gotop(onclick="window.scrollTo({ top: 0, behavior: 'smooth' })") 
            .total__summary#totalSummary 
              a(href="#")  看收入
              a.float-btn.style-ex
                span 總金額
                span.float-btn-amount.color-ex 0           

        #details(style="display:none;")
          .details__notice            
            .details__notice--text 包含「薪資」的搜尋結果如下
            a(href="") 清除搜尋

          .filter__group 
            a(href="").btn 金額自訂 
              img(src="./images/global/icon_close_white.svg")
            a(href="").btn 帳務類別(4)
              img(src="./images/global/icon_close_white.svg")

          .details
            .empty__content  
              img(src="./images/global/icon_empty_editing.svg", alt="")
              h4 尚無相關內容 
              span 溫馨小提示：使用永豐帳戶及信用卡，<br>資料就會定期自動匯入唷

            .gotop#gotop2(onclick="window.scrollTo({ top: 0, behavior: 'smooth' })") 
            .total__summary#totalSummary2 
              a(href="#")  看收入
              a.float-btn.style-ex
                span 總金額
                span.float-btn-amount.color-ex 0 

        //-提示訊息
        .message_board#msg_board
          table.msg 
            tbody 
              tr 
                td(rowspan="2" style="width:30%;text-align:center") 
                  img(src="./images/global/update_checkMark.svg" alt="資料更新")
                td 資料更新時間如下：
              tr 
                td.duration 銀行：2022 年 3 月 20 日<br>信用卡：2022 年 3 月 20 日


    .popup2#myModal
      .content
        .content-title
          h3 選擇排序
          a(href="") 取消
        ul.sorting 
          li 
            a(href="").active 金額由大到小
          li
            a(href="") 金額由小到大 
          li
            a(href="") 時間由近至遠
          li
            a(href="") 時間由遠至近  

    .popup2#myModal1
      form(action="") 
        .content
          h3 其他日期

          #dateFilter__content_ex
            .c-radio.custom60.active 近60天
            .c-radio.custom90 近90天
            .c-radio.customAll 全部
            .c-radio.customDuration 自訂
          
          #dateFilter__content_in(style="display:none")
            .c-radio.custom60.active 近60天
            .c-radio.custom90 近90天
            .c-radio.customAll 全部
            .c-radio.customDuration 自訂    

          div.customDurationInput(style="display:none")
            h3 自訂
            .filter__date-container
              input#date-input-start.filter__date(type='text' onclick='event.preventDefault()' required='' readonly="true")
              .date-dash
              input#date-input-end.filter__date(type='text' onclick='event.preventDefault()' required='' readonly="true")
            p#warningText

          .btnSet__ex#btn-wrap
            a#cancelBtn 取消
            a.primary#submitBtn 確定
      #scrollBlock
        .date-selector-header

          .date-title
            p#date-title 標題
          #date-ok
            p 完成
        .date-selector-title
          div
            p 年
          div 
            p 月
          div 
            p 日
        .date-selector
          #year1.year
          #month1.month
          #day1.day  


//- 單頁 Javascript
append script  

  script(src="./js/vendor/pullkeep.js") 
  script(src="./js/index.js") 
  script(src='./js/scrollDate.js')
  script(src="./js/switchEXIN.js") 